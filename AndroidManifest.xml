<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romanpulov.symphonytimer"
    android:versionCode="1"
    android:versionName="0.4.2" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tuba"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.romanpulov.symphonytimer.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/Theme.CompatTransparent" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.romanpulov.symphonytimer.AddItemActivity"
            android:theme="@style/Theme.AppCompat"  
            android:label="@string/title_activity_add_item"
            android:parentActivityName="com.romanpulov.symphonytimer.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.romanpulov.symphonytimer.MainActivity" />       
        </activity>
        <activity
            android:name="com.romanpulov.symphonytimer.SettingsActivity"
            android:theme="@style/Theme.CompatTransparentWhite" 
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.romanpulov.symphonytimer.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.romanpulov.symphonytimer.MainActivity" />
        </activity>

        <!-- Broadcast receiver -->
        <receiver android:name="com.romanpulov.symphonytimer.AlarmManagerBroadcastReceiver" >
        </receiver>

        <activity android:name="com.romanpulov.symphonytimer.ImageSelectionActivity" >
        </activity>
        <activity
            android:name="com.romanpulov.symphonytimer.HistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/Theme.CompatTransparentWhite"  
            android:parentActivityName="com.romanpulov.symphonytimer.MainActivity" > 
	        <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.romanpulov.symphonytimer.MainActivity" />          
        </activity>
    </application>

</manifest>
