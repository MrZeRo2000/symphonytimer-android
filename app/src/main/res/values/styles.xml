<resources>

    <style name="RootTheme" parent="Theme.AppCompat">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="RootTheme">
        <!-- for Toolbar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Common window styles -->
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textColor">@color/brightTextColor</item>
        <!-- Prevent icon with white background from appearing on startup -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.CompatTransparent" parent="AppTheme" >
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Main activity theme -->
    <style name="ToolBarTheme.CompatTransparent" parent="Theme.CompatTransparent">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="actionModeBackground">@color/colorAction</item>
        <item name="android:actionModeBackground">@color/colorAction</item>

    </style>

    <style name="TextAppearance.ExtraLarge" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>


</resources>
