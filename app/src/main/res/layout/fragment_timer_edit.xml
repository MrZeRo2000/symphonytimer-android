<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            tools:context=".fragment.TimerEditFragment" >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_title"
                android:layout_margin="@dimen/activity_input_margin"
        />

        <EditText
                android:id="@+id/title_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_input_margin"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:hint="@string/hint_timer_title"
        />

        <TextView
                android:id="@+id/time_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_time"
                android:layout_margin="@dimen/activity_input_margin"
        />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_input_margin"
        >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/label_time_hours"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/label_time_minutes"
            />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/label_time_seconds"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_input_margin"
                android:baselineAligned="false"
        >

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/number_picker_size"
                    android:layout_weight="1"
                    android:gravity="center"
            >

                <com.romanpulov.library.view.SlideNumberPicker
                        android:id="@+id/hours_number_picker"
                        android:layout_width="@dimen/number_picker_size"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        app:min="0"
                        app:max="23"
                        app:textSize="18sp"
                        app:textStyle = "bold"
                        app:textColor="@android:color/white"
                        app:frameColor="@android:color/white"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/number_picker_size"
                    android:layout_weight="1"
                    android:gravity="center"
            >

                <com.romanpulov.library.view.SlideNumberPicker
                        android:id="@+id/minutes_number_picker"
                        android:layout_width="@dimen/number_picker_size"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        app:min="0"
                        app:max="59"
                        app:textSize="18sp"
                        app:textStyle = "bold"
                        app:textColor="@android:color/white"
                        app:frameColor="@android:color/white"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/number_picker_size"
                    android:layout_weight="1"
                    android:gravity="center"
            >

                <com.romanpulov.library.view.SlideNumberPicker
                        android:id="@+id/seconds_number_picker"
                        android:layout_width="@dimen/number_picker_size"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        app:min="0"
                        app:max="59"
                        app:textSize="18sp"
                        app:textStyle = "bold"
                        app:textColor="@android:color/white"
                        app:frameColor="@android:color/white"
                />

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_input_margin"
                android:text="@string/label_sound"
        />
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_input_button_size"
                android:orientation="horizontal"
                android:padding="0dp"
        >
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
            >
                <ImageButton
                        android:id="@+id/sound_file_button"
                        android:contentDescription="@string/sound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_input_margin"
                        android:text="@string/default_sound"
                        android:onClick="onSoundFileButtonClick"
                />
                <TextView
                        android:id="@+id/sound_file_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:textAppearance="?android:attr/textAppearanceSmallInverse"
                />
            </RelativeLayout>
            <ImageButton
                    android:id="@+id/preview_sound_file_button"
                    android:contentDescription="@string/clear"
                    android:layout_width="@dimen/activity_input_button_size"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/activity_input_margin"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tuba"
                    android:onClick="onPreviewSoundFileButtonClick"
            />
            <ImageButton
                    android:id="@+id/clear_sound_file_button"
                    android:contentDescription="@string/clear"
                    android:layout_width="@dimen/activity_input_button_size"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/activity_input_margin"
                    android:src="@android:drawable/ic_delete"
                    android:onClick="onClearSoundFileButtonClick"
            />
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_input_margin"
                android:text="@string/label_image"
        />
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_input_button_size"
                android:orientation="horizontal"
                android:padding="0dp"
        >
            <ImageButton
                    android:id="@+id/image_file_image_button"
                    android:contentDescription="@string/image_selection"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/activity_input_margin"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_check_off"
                    android:onClick="onImageFileImageButtonClick"
            />
            <ImageButton
                    android:id="@+id/clear_image_file_button"
                    android:contentDescription="@string/clear"
                    android:layout_width="@dimen/activity_input_button_size"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/activity_input_margin"
                    android:src="@android:drawable/ic_delete"
                    android:onClick="onClearImageFileButtonClick"
            />
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_input_margin"
                android:text="@string/label_auto_timer_disable"
        />
        <Spinner
                android:id="@+id/auto_timer_disable_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_input_margin"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_dialog_height"
                android:layout_marginTop="@dimen/activity_dialog_margin_top"
        >
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="?android:attr/dividerVertical"
                    android:layout_alignParentTop="true"/>
            <View
                    android:id="@+id/view_vertical_helper"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="4dip"
                    android:background="?android:attr/dividerVertical"
                    android:layout_centerHorizontal="true"/>
            <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@id/view_vertical_helper"
                    android:layout_toLeftOf="@id/view_vertical_helper"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@android:string/cancel"
                    android:layout_alignParentBottom="true"
                    android:onClick="onCommandClick"
            />
            <Button
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@android:string/ok"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/view_vertical_helper"
                    android:layout_toRightOf="@id/view_vertical_helper"
                    android:onClick="onCommandClick"
            />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>