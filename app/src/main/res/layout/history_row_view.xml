<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/main_list_shape">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
	>
			<LinearLayout
				android:id="@+id/history_row_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginLeft="@dimen/control_padding"
				android:layout_marginTop="@dimen/control_padding_half"
				android:layout_marginRight="@dimen/control_padding"
				>
				<TextView
					android:id="@+id/history_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center_vertical"
					android:layout_marginEnd="@dimen/control_padding_half"
					android:layout_marginRight="@dimen/control_padding_half"
					android:textAppearance="@android:style/TextAppearance.Medium" />
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					android:padding="0dp"
					android:layout_gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/history_image_view"
						android:layout_width="wrap_content"
						android:layout_height="@dimen/history_image_size"
						android:layout_marginTop="@dimen/control_padding_half"
						android:adjustViewBounds="true"
						android:contentDescription="@string/image_default_content_description"
						android:scaleType="fitCenter" />

				</LinearLayout>
			</LinearLayout>

			<TextView
				android:id="@+id/history_time_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/control_padding"
				android:layout_marginTop="@dimen/control_padding_half"
				android:layout_marginBottom="@dimen/control_padding"
				android:layout_marginRight="@dimen/control_padding"
				android:typeface="sans"
				android:textAppearance="@android:style/TextAppearance.Small" />

			<TextView
				android:id="@+id/history_time_details_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/control_padding"
				android:layout_marginTop="@dimen/control_padding_half"
				android:layout_marginBottom="@dimen/control_padding"
				android:layout_marginRight="@dimen/control_padding"
				android:typeface="sans"
				android:textAppearance="@android:style/TextAppearance.Small" />
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>