<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/control_padding_half"
	android:paddingBottom="@dimen/control_padding_half"
	android:paddingLeft="@dimen/control_padding"
	android:paddingRight="@dimen/control_padding"
	android:background="@drawable/main_list_shape">

	<ImageView
			android:id="@+id/history_image_view"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/history_image_size"
			android:paddingStart="@dimen/control_padding_half"
			android:paddingEnd="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:adjustViewBounds="true"
			android:contentDescription="@string/image_default_content_description"
			android:scaleType="fitCenter" />

	<TextView
			android:id="@+id/history_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toStartOf="@+id/history_image_view"
			app:layout_constraintTop_toTopOf="@+id/history_image_view"
			app:layout_constraintBottom_toBottomOf="@+id/history_image_view"
			android:textAppearance="@android:style/TextAppearance.Medium" />

	<TextView
			android:id="@+id/history_time_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/history_text_view"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="@dimen/control_padding_half"
			android:typeface="sans"
			android:textAppearance="@android:style/TextAppearance.Small" />

	<TextView
			android:id="@+id/history_time_details_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@+id/history_time_view"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="@dimen/control_padding_half"
			android:typeface="sans"
			android:textAppearance="@android:style/TextAppearance.Small" />

</androidx.constraintlayout.widget.ConstraintLayout>